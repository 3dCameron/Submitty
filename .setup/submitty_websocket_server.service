[Unit]
Description=Submitty WebSocket Server
Documentation=http://submitty.org

[Service]
User=submitty_php
Group=submitty_php
Restart=on-failure
Type=simple
ExecStart=/usr/bin/env php /usr/local/submitty/site/app/controllers/SocketController.php
TimeoutSec=1min
RuntimeMaxSec=infinity

[Install]
WantedBy=multi-user.target
